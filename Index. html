<script>
function calculate(){
let cgpa = document.getElementById("cgpa").value;
let formula = document.getElementById("formula").value;
let percentage = cgpa * formula;
document.getElementById("result").innerHTML = 
"Your Percentage: " + percentage.toFixed(2) + "%";
}
</script>

